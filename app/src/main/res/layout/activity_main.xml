<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_dark"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="LaptopPredict"
        app:titleTextColor="@android:color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ic_laptop"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Ilustrasi"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Brand -->
                        <TextView
                            android:text="Pilih Brand"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Spinner
                            android:id="@+id/input_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <!-- RAM -->
                        <TextView
                            android:text="Pilih RAM (GB)"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/input_ram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!-- Storage -->
                        <TextView
                            android:text="Pilih Penyimpanan (GB)"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/input_storage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!-- CPU (moved below storage) -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kecepatan Prosesor (GHz)"
                            android:layout_marginTop="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_processor"
                                android:inputType="numberDecimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Screen Size -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ukuran Layar (Inch)"
                            android:layout_marginTop="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_screen"
                                android:inputType="numberDecimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Weight -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Berat (Kg)"
                            android:layout_marginTop="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_weight"
                                android:inputType="numberDecimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Predict Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/predict_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prediksi Harga"
                    android:icon="@drawable/ic_calculate"
                    app:iconPadding="8dp"
                    android:backgroundTint="@color/gray_dark"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                android:padding="12dp" />

                <!-- Prediction Result -->
                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasil prediksi akan muncul di sini"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray_light"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
